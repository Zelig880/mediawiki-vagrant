#!/bin/bash
cd /tmp
wget http://www.us.apache.org/dist/trafficserver/trafficserver-<%= @version %>.tar.bz2
tar xjvf trafficserver-<%= @version %>.tar.bz2
cd trafficserver-<%= @version %>
./configure --prefix=<%= @deploy_dir %> --enable-experimental-plugins --with-user=trafficserver --with-group=trafficserver
make
make install