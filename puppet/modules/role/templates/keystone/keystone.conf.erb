[DEFAULT]

admin_token = <%= @admin_password %>
debug = false
log_config_append = /etc/keystone/logging.conf
log_file = keystone.log
log_dir = /var/log/keystone
notification_driver = wmfkeystonehooks

[assignment]
driver = sql

[sql]

[database]
connection = mysql+pymysql://keystone:<%= @db_password %>@127.0.0.1/keystone

[identity]
driver = ldap

[cache]
enabled = False
backend = dogpile.cache.memcached
memcache_servers = localhost:11211

[catalog]
driver = sql

[token]
provider = uuid
driver = sql
expiration = 613440

[policy]
driver = rules

[role]
driver = sql

[resource]
driver = sql

[signing]

[ldap]
url = ldap://127.0.0.1
user = <%= scope['::role::ldapauth::admin_dn'] %>
password = <%= scope['::role::ldapauth::admin_password'] %>

tree_dn = <%= scope['::role::ldapauth::base_dn'] %>

user_tree_dn = ou=people,<%= scope['::role::ldapauth::base_dn'] %>
user_id_attribute = uid
user_name_attribute = cn

user_allow_create = False
user_allow_update = False
user_allow_delete = False

group_allow_create = False
group_allow_update = False
group_allow_delete = False

[auth]
methods = external,password,token
