[Unit]
Description=fundraising dash service
#Requires=mediawiki-ready.service
#After=mediawiki-ready.service

[Service]
User=www-data
Group=www-data
SyslogIdentifier=fundraising_dash
ExecStart=/usr/bin/nodejs <%= scope['::crm::dash::dir'] %>/server.js -d -c <%= scope['::crm::dash::dir'] %>/settings.js
Restart=always

[Install]
WantedBy=multi-user.target