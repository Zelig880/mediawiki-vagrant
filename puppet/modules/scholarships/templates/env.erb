; PHP PDO database connection data source name
DB_DSN="mysql:host=127.0.0.1;dbname=<%= @db_name %>;charset=utf8"

; PHP PDO database connection user name
DB_USER=<%= @db_user %>

; PHP PDO database connection password
DB_PASS="<%= @db_pass %>"

; Log message output file or udp2log uri
LOG_FILE=<%= @log_file %>

; SMTP relay for outgoing email messages
SMTP_HOST=127.0.0.1

; Directory for apache to write twig template cache files
CACHE_DIR=<%= @cache_dir %>

; Date/time that applications will first be accepted
; Value should be compatible with PHP's strtotime() function
APPLICATION_OPEN=2014-01-16T00:00

; Date/time after which applications will no longer be accepted
; Value should be compatible with PHP's strtotime() function
APPLICATION_CLOSE=2038-01-01T00:00

; OAuth settings
USE_OAUTH=true
OAUTH_CONSUMER_TOKEN=<%= @oauth_consumer_token %>
OAUTH_SECRET_TOKEN=<%= @oauth_secret_token %>
OAUTH_ENDPOINT="<%= @oauth_server %>/w/index.php?title=Special:OAuth"
OAUTH_REDIR="<%= @oauth_server %>/wiki/Special:OAuth/authenticate?"
OAUTH_CALLBACK=http://<%= @vhost_name %><%= scope['::port_fragment'] %>/oauth/callback

; This is a testing deployment
MOCK=1
SLIM_MODE=development
