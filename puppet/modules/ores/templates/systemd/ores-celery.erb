[Unit]
Description=ORES revision scoring service (scoring worker)
Requires=mediawiki-ready.service
After=mediawiki-ready.service

[Service]
User=www-data
Group=www-data
SyslogIdentifier=ores-celery
WorkingDirectory=<%= @ores_root %>
ExecStart=<%= @venv_dir %>/bin/ores applications.celery --logging-config <%= @logging_config %>
Restart=always

[Install]
WantedBy=multi-user.target

