[Unit]
Description=ORES revision scoring service (scoring worker)
Requires=mediawiki-ready.service
After=mediawiki-ready.service

[Service]
User=www-data
Group=www-data
SyslogIdentifier=ores-celery
WorkingDirectory=<%= scope['::ores::ores_root'] %>
ExecStart=<%= scope['::ores::venv_dir'] %>/bin/ores applications.celery --logging-config <%= scope['::ores::logging_config'] %>
Restart=always

[Install]
WantedBy=multi-user.target

