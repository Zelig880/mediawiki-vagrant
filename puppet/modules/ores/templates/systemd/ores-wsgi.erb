[Unit]
Description=ORES revision scoring service (web worker)
Requires=mediawiki-ready.service
After=mediawiki-ready.service

[Service]
User=www-data
Group=www-data
SyslogIdentifier=ores-wsgi
WorkingDirectory=<%= @ores_root %>
ExecStart=<%= @venv_dir %>/bin/ores applications.wsgi --port=<%= @port %> --processes=1 --logging-config <%= @logging_config %>
Restart=always

[Install]
WantedBy=multi-user.target

