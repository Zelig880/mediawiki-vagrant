[Unit]
Description=Varnish slow log logger
After=varnish.service

[Service]
User=varnish
Group=varnish
ExecStart=/usr/local/bin/varnishslowlog --slow-threshold 0.0 --logstash-server=127.0.0.1:11514 --varnishlog-path=/usr/local/bin/varnishlog
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
