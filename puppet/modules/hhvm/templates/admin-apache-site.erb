# vim: filetype=apache sts=4 sw=4 autoindent
#
# Apache site configuration for HHVM admin server
# This file is managed by Puppet.
#
ServerName hhvm-admin
ServerAlias <%= @admin_site_name %>
ServerAdmin https://www.mediawiki.org/wiki/MediaWiki-Vagrant
DocumentRoot "<%= @docroot %>"
LogLevel error

<Directory />
    Options FollowSymLinks
    AllowOverride None
</Directory>

<Directory <%= @docroot %>/>
</Directory>

ProxyPass / fcgi://127.0.0.1:9001/ retry=0
