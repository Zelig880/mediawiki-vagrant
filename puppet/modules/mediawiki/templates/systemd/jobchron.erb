[Unit]
Description="Mediawiki job queue chron loop"
Requires=mediawiki-ready.service
After=mediawiki-ready.service

[Service]
EnvironmentFile=/etc/default/jobrunner
User=www-data
Group=www-data
SyslogIdentifier=jobchron
ExecStart=/usr/bin/php <%= scope['::mediawiki::jobrunner::dir'] %>/redisJobChronService --config-file=/etc/jobrunner.json ${DAEMON_OPTS}
Restart=always

[Install]
WantedBy=multi-user.target
