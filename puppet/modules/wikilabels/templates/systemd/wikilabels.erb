[Unit]
Description=Wikilabels edit labeling service
Requires=mediawiki-ready.service
After=mediawiki-ready.service

[Service]
User=www-data
Group=www-data
SyslogIdentifier=wikilabels
WorkingDirectory=<%= scope['::wikilabels::repo_dir'] %>
ExecStart=<%= scope['::wikilabels::deploy_dir'] %>/bin/wikilabels dev_server --port=<%= scope['::wikilabels::port'] %>
Restart=always

[Install]
WantedBy=multi-user.target

