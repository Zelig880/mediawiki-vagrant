# This file is managed by Puppet, do not edit!

[wiki]
dblist=<%= @dblists_dir %>/all.dblist
privatelist=<%= @dblists_dir %>/private.dblist
closedlist=<%= @dblists_dir %>/closed.dblist
skipdblist=<%= @dblists_dir %>/skip.dblist
flowlist=<%= @dblists_dir %>/flow.dblist
dir=<%= @mediawiki_dir %>
tablejobs=<%= @conf_dir %>/tablejobs.yaml
multiversion=<%= scope['mediawiki::apache::docroot'] %>/w

[output]
public=<%= @output_dir %>/public
private=<%= @output_dir %>/private
temp=<%= @output_dir %>/temp
templatedir=<%= @conf_dir %>/templs
index=backup-index.html
webroot=http://<%= @site_name %>
fileperms=0o644

[reporting]
# set this to 'nomail' to disable email notification on dump failure
mailfrom=root@localhost
smtpserver=smtp.myisp.com
adminmail=nomail
staleage=3600
skipprivatetables=1

[database]
user=<%= @db_user %>
# Note we can *not* have quotes around this.
password=<%= @db_pass %>
max_allowed_packet=32M

[tools]
php=/usr/bin/php
mysql=/usr/bin/mysql
mysqldump=/usr/bin/mysqldump
gzip=/bin/gzip
bzip2=/bin/bzip2
sevenzip=/usr/bin/7za
checkforbz2footer=<%= @mwbzutils_source_dir %>/checkforbz2footer
writeuptopageid=<%= @mwbzutils_source_dir %>/writeuptopageid
recompressxml=<%= @mwbzutils_source_dir %>/recompressxml

[cleanup]
keep=3

[chunks]
chunksEnabled=1
pagesPerChunkHistory=2,5,5,5,5
pagesPerChunkAbstract=10,10
#recombineHistory=
#checkpointTime=
#revsPerJob=
#retryWait=
#maxRetries=
#revsMargin=
lbzip2forhistory=1
lbzip2threads=1

[otherformats]
multistream=1

[misc]
sevenzipprefetch=1

[stubs]
orderrevs=0
minpages=1
maxrevs=100000

